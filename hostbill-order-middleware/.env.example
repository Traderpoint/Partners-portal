# HostBill Order Middleware Configuration

# Server Configuration
PORT=3005
NODE_ENV=development

# HostBill API Configuration
HOSTBILL_API_URL=https://vps.kabel1it.cz/admin/api.php
HOSTBILL_API_ID=your_api_id_here
HOSTBILL_API_KEY=your_api_key_here
HOSTBILL_BASE_URL=https://vps.kabel1it.cz

# Security Configuration
API_SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/middleware.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Order Processing Configuration
DEFAULT_PAYMENT_METHOD=banktransfer
DEFAULT_CURRENCY=CZK

# Payment Gateway Configuration
# Map CloudVPS payment methods to HostBill gateway IDs
HOSTBILL_GATEWAY_CARD=1
HOSTBILL_GATEWAY_PAYPAL=2
HOSTBILL_GATEWAY_BANK=3
HOSTBILL_GATEWAY_CRYPTO=4

# HostBill Client Area URL (for payment redirects)
HOSTBILL_CLIENT_URL=https://vps.kabel1it.cz

# Bank Transfer Details (for manual payments)
BANK_ACCOUNT_NUMBER=123456789/0100
BANK_NAME=Komerční banka
BANK_IBAN=CZ65 0100 0000 0012 3456 7890
BANK_SWIFT=KOMBCZPP
